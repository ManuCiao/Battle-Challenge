<style>
@import 'https://fonts.googleapis.com/css?family=Press+Start+2P';

body {
  font-size: 25px;
  text-transform: uppercase;
  background: url('https://twistedsifter.files.wordpress.com/2013/05/animated-gifs-of-fighting-game-backgrounds-45.gif') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  color: #fff;
  font-family: 'Press Start 2P', cursive;
  text-align: center;
  text-shadow: 6px 6px 3px #4d0511;
}


.player1 {
  width: 50%;
  float: left;
  margin-top: 10%;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  opacity: 0.8;
  filter: alpha(opacity=80);
}

.player2 {
  width: 50%;
  float: right;
  margin-top: 10%;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  opacity: 0.8;
  filter: alpha(opacity=80);
}

.wrapper {
  text-align: center;
}

form {
  width: auto;
  height: auto;
  margin: 60px;
}

form button {
  margin: 0 auto;
  margin-top: 22%;
  font-family: 'Press Start 2P', cursive;
  display: block;
  background: #f01313;
  background-image: -webkit-linear-gradient(top, #f01313, #4f0707);
  background-image: -moz-linear-gradient(top, #f01313, #4f0707);
  background-image: -ms-linear-gradient(top, #f01313, #4f0707);
  background-image: -o-linear-gradient(top, #f01313, #4f0707);
  background-image: linear-gradient(to bottom, #f01313, #4f0707);
  -webkit-border-radius: 18;
  -moz-border-radius: 18;
  border-radius: 18px;
  text-shadow: 4px 4px 3px #4d0511;
  -webkit-box-shadow: 5px 5px 7px #590c0c;
  -moz-box-shadow: 5px 5px 7px #590c0c;
  box-shadow: 5px 5px 7px #590c0c;
  color: #ffffff;
  font-size: 27px;
  padding: 30px 30px 30px 30px;
  border: dotted #ffffff 1px;
  text-decoration: none;
  width: 31%;
}

form button:hover {
  background: #4f0707;
  background-image: -webkit-linear-gradient(top, #4f0707, #f01313);
  background-image: -moz-linear-gradient(top, #4f0707, #f01313);
  background-image: -ms-linear-gradient(top, #4f0707, #f01313);
  background-image: -o-linear-gradient(top, #4f0707, #f01313);
  background-image: linear-gradient(to bottom, #4f0707, #f01313);
  text-decoration: none;
}

form input {
  margin-top: 50px;
  width: auto;
  height: auto;
  opacity: 0.9;
  text-transform: capitalize;
  font-size: 20px;
  padding: 10px;
}

</style>

<form name="input" action="/names" method="post">
  <div class="player1">
    <label for "player1">Player 1</label><br>
    <input type="text" name="player_1" value="Enter name...">
  </div>
  <div class="player2">
    <label for "player2">Player 2</label><br>
    <input type="text" name="player_2" value="Enter name...">
  </div>
  &nbsp;
  <div>
    <button class="submit" type="submit" value="Start">FIGHT!</button>
  </div>
  &nbsp;
</form>
