<style>

  @import 'https://fonts.googleapis.com/css?family=Press+Start+2P';

  body {
    margin-top: 100px;
    font-size: 30px;
    text-transform: uppercase;
    background: url('http://a5.files.theultralinx.com/image/upload/MTI5MDI0MjM0NzU1MjU2Mjkw.gif')no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    color: #fff;
    font-family: 'Press Start 2P', cursive;
    text-align: center;
    padding-top: 200;

  }

  .container {
    margin-top: 50px;
    width: 80%;
    margin: auto;
    height: auto;
    text-shadow: 5px 5px #000;
    text-align: center;
  }

  .attack img {
    margin-top: 50px;
    display: block;
    margin: 0 auto;

  }

  form {
    margin: 0 auto;
    text-align: center;
    text-align: -webkit-center;
    padding: 50;
  }

  form button {
    display: block;
    background: #f01313;
    background-image: -webkit-linear-gradient(top, #f01313, #4f0707);
    background-image: -moz-linear-gradient(top, #f01313, #4f0707);
    background-image: -ms-linear-gradient(top, #f01313, #4f0707);
    background-image: -o-linear-gradient(top, #f01313, #4f0707);
    background-image: linear-gradient(to bottom, #f01313, #4f0707);
    -webkit-border-radius: 18;
    -moz-border-radius: 18;
    border-radius: 18px;
    text-shadow: 4px 4px 3px #4d0511;
    -webkit-box-shadow: 5px 5px 7px #590c0c;
    -moz-box-shadow: 5px 5px 7px #590c0c;
    box-shadow: 5px 5px 7px #590c0c;
    color: #ffffff;
    font-family: 'Press Start 2P', cursive;
    font-size: 25px;
    padding: 35px 35px 35px 35px;
    border: dotted #ffffff 1px;
    text-decoration: none;

  }

  form button :hover {
    background: #4f0707;
    background-image: -webkit-linear-gradient(top, #4f0707, #f01313);
    background-image: -moz-linear-gradient(top, #4f0707, #f01313);
    background-image: -ms-linear-gradient(top, #4f0707, #f01313);
    background-image: -o-linear-gradient(top, #4f0707, #f01313);
    background-image: linear-gradient(to bottom, #4f0707, #f01313);
    text-decoration: none;
  }

</style>

<div class="container">
  <p class="attack"><%= @game.player_1.name %> attacked <%= @game.player_2.name %></p>
  <br><br>
  <p><%= @game.player_2.name %>: <%= @game.player_2.hit_points %> points</p>
  <br><br><br>
  <img src="http://25.media.tumblr.com/tumblr_m7qxw76Vil1qg3sz6o1_500.png">
  <div>
    <form name="input" action="/switch" method="post">
      <div>
        <button class="submit" type="submit" value="Switch">Switch Turn</button>
      </div>
      &nbsp;
    </form>
  </div>
</div>
