<style>
@import 'https://fonts.googleapis.com/css?family=Press+Start+2P';
body {
  font-size: 40px;
  text-transform: uppercase;
  background: url('http://i.imgur.com/xh9rMsc.gif')no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  color: #fff;
  font-family: 'Press Start 2P', cursive;
}

.container {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  text-shadow: 2px 2px #000;
}

.left, .middle, .right {
  float: left;
  text-align: center;
  padding-top: 80px
}

.left, .right {
  width: 40%;
}

.left img, .right img {
  width: 90%;
  padding-top: 90px;
}

.middle {
  width: 20%;
}

.hitpoints {
  font-size: 18px;
  color: red;
}


.action a {
  margin: auto;
  background: #d93434;
  background-image: -webkit-linear-gradient(top, #d93434, #2bb8a0);
  background-image: -moz-linear-gradient(top, #d93434, #2bb8a0);
  background-image: -ms-linear-gradient(top, #d93434, #2bb8a0);
  background-image: -o-linear-gradient(top, #d93434, #2bb8a0);
  background-image: linear-gradient(to bottom, #d93434, #2bb8a0);
  -webkit-border-radius: 28;
  -moz-border-radius: 28;
  border-radius: 28px;
  font-family: 'Press Start 2P', cursive;
  color: #ffffff;
  font-size: 25px;
  padding: 15px 25px 15px 25px;
  text-decoration: none;
}

.action a:hover {
  background: #2bb8a0;
  background-image: -webkit-linear-gradient(top, #2bb8a0, #d93434);
  background-image: -moz-linear-gradient(top, #2bb8a0, #d93434);
  background-image: -ms-linear-gradient(top, #2bb8a0, #d93434);
  background-image: -o-linear-gradient(top, #2bb8a0, #d93434);
  background-image: linear-gradient(to bottom, #2bb8a0, #d93434);
  text-decoration: none;
}


.action a {
  margin-top: 100px;
  width: auto;
  height: auto;
  opacity: 0.9;
  text-transform: uppercase;
  font-size: 25px;
  padding: 10px;
  float: left;
}

</style>

<div class="container">
  <div class="left">
    <%= @player_1 %>
    <p class="hitpoints">HP: <%= @player_1_hp %> points</p>
    <img src="http://www.fightersgeneration.com/nx3/char/persona4arena/s/yu-narukami-stance.gif">
  </div>
  <div class="middle">
    vs
    <div class="action">
      <a href="/attack">Attack</a>
    </div>
  </div>
  <div class="right">
    <%= @player_2 %>
    <p class="hitpoints">HP: <%= @player_2_hp %> points</p>
    <img src="http://i.imgur.com/RvAat.gif">
  </div>
</div>
