<style>
@import 'https://fonts.googleapis.com/css?family=Press+Start+2P';
body {
  font-size: 40px;
  text-transform: uppercase;
  background: url('http://i.imgur.com/xh9rMsc.gif')no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  color: #fff;
  font-family: 'Press Start 2P', cursive;
}

.container {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  text-shadow: 5px 5px #000;
}

.left, .middle, .right {
  float: left;
  text-align: center;
  padding-top: 80px
}

.left, .right {
  width: 40%;
}

.left img, .right img {
  width: 90%;
  padding-top: 90px;
}

.middle {
  width: 20%;
}

.hitpoints {
  font-size: 18px;
  color: red;
}


.action a {
  margin: auto;
  display: block;
  background: #f01313;
  background-image: -webkit-linear-gradient(top, #f01313, #4f0707);
  background-image: -moz-linear-gradient(top, #f01313, #4f0707);
  background-image: -ms-linear-gradient(top, #f01313, #4f0707);
  background-image: -o-linear-gradient(top, #f01313, #4f0707);
  background-image: linear-gradient(to bottom, #f01313, #4f0707);
  -webkit-border-radius: 18;
  -moz-border-radius: 18;
  border-radius: 18px;
  text-shadow: 4px 4px 3px #4d0511;
  -webkit-box-shadow: 5px 5px 7px #590c0c;
  -moz-box-shadow: 5px 5px 7px #590c0c;
  box-shadow: 5px 5px 7px #590c0c;
  color: #ffffff;
  font-family: 'Press Start 2P', cursive;
  font-size: 25px;
  padding: 35px 35px 35px 35px;
  border: dotted #ffffff 1px;
  text-decoration: none;
}

.action a:hover {
  background: #4f0707;
  background-image: -webkit-linear-gradient(top, #4f0707, #f01313);
  background-image: -moz-linear-gradient(top, #4f0707, #f01313);
  background-image: -ms-linear-gradient(top, #4f0707, #f01313);
  background-image: -o-linear-gradient(top, #4f0707, #f01313);
  background-image: linear-gradient(to bottom, #4f0707, #f01313);
  text-decoration: none;
}


.action a {
  margin-top: 100px;
  width: auto;
  height: auto;
  opacity: 0.9;
  text-transform: uppercase;
  font-size: 25px;
  padding: 20px;
  float: left;
}
.turn{
  text-align: center;
}

</style>

<div class="container">
  <div class="left">
    <%= $game.player_1.name %>
    <p class="hitpoints">HP: <%= $game.player_1.hit_points %> points</p>
    <img src="http://www.fightersgeneration.com/nx3/char/persona4arena/s/yu-narukami-stance.gif">
  </div>
  <div class="middle">
    vs
    <div class="action">
      <a href="/attack">Attack</a>
    </div>
  </div>
  <div class="right">
    <%= $game.player_2.name %>
    <p class="hitpoints">HP: <%= $game.player_2.hit_points %> points</p>
    <img src="http://i.imgur.com/RvAat.gif">
  </div>
  <div>
    <p class="turn"><%= $game.switch_player.name %> turn to play</p>
  </div>
</div>
